<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.development.kc5517.lifegoals">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pen_writing"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pen_writing"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.development.kc5517.lifegoals.view.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.development.kc5517.lifegoals.view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.development.kc5517.lifegoals.view.AcknowledgementsActivity"
            android:label="Acknowledgements"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name="com.development.kc5517.lifegoals.view.AboutActivity"
            android:label="About"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name="com.development.kc5517.lifegoals.view.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>

        <activity android:name="com.development.kc5517.lifegoals.view.SettingsActivity"
            android:label="Settings"
            android:theme= "@style/AppTheme"/>

    </application>

</manifest>